<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="orange_style">
        <item name="android:textColor">@color/orange_text</item>
        <item name="android:backgroundTint">@color/orange_button</item>
    </style>

    <style name="gray_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/gray_button</item>
    </style>

    <style name="button_rounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">32dp</item>
        <item name="cornerSizeBottomRight">32dp</item>
        <item name="cornerSizeTopLeft">32dp</item>
        <item name="cornerSizeBottomLeft">32dp</item>
    </style>

</resources>